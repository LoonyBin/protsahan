-content_for :aside do
  %section.tagcloud
    %h1 Tags
    %ul
      %li jute
      %li cotton
      %li bag
  - if can? :create, Item
    %section.add_new
      = button_to 'New Item', new_item_path, :method => :get
%h1 Listing items
%ul.items
  - @items.each do |item|
    = link_to item do
      %li.item
        .image=image_tag item.image_url(:thumb) if item.image?
        .name= item.name
        .price &#8377; #{item.price}
        .actions
          = button_to 'Order', new_item_order_path(item), :method => :get
          - if can? :update, item
            = button_to 'Edit', edit_item_path(item), :method => :get
          - if can? :destroy, item
            = button_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete
.clear
