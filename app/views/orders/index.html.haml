%h1 Listing orders

%table
  %thead
    %tr
      -if current_user.is_admin?
        %th User
      %th Item
      %th Quantity
      %th
  %tbody  
    - @orders.each do |order|
      %tr
        -if current_user.is_admin?
          %td= order.user.email
        %td= order.item.name
        %td= order.quantity
        %td.actions
          = link_to 'Show', order
          = button_to 'Edit', edit_order_path(order), :method => :get
          = button_to 'Destroy', order, :confirm => 'Are you sure?', :method => :delete
